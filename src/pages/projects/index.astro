---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import {
  ProjectStatus,
  projectStatusEmoji,
  projectStatusList,
} from "./projects.i";

const projects = await getCollection("projects");
const title = "üõ†Ô∏è Projects";
---

<Layout title={title}>
  <h1>{title}</h1>
  <h2>Status</h2>
  <ul class="list-none pl-0">
    {
      projectStatusList.map((status: ProjectStatus) => (
        <li>
          <span class="mr-2">{projectStatusEmoji[status]}</span>
          {status}
        </li>
      ))
    }
  </ul>
  <hr />
  <section class="space-y-4">
    {
      projects.map((project) => (
        <article>
          <span class="mr-2">
            {projectStatusEmoji[project.data.status as ProjectStatus]}
          </span>
          <a href={`/projects/${project.slug}`}>{project.data.title}</a>
        </article>
      ))
    }
  </section>
</Layout>

